---
// Verify Email Page
// ------------
// Description: A page shown when email verification is required.

export const prerender = false;

// Components
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import Row from '../components/ui/Row.astro';
import Col from '../components/ui/Col.astro';
import Button from '../components/ui/Button.astro';
import { Icon } from 'astro-icon/components';

// Page Metadata
const title = 'Verify Your Email | Learn';
const description = 'Please verify your email address to access your dashboard.';
---

<Layout title={title} description={description}>
  <Section>
    <Row flex classes="text-center">
      <Col span="2" />
      <Col span="8">
        <div class="mx-auto max-w-2xl">
          <Icon name="envelope" class="mx-auto mb-8 h-16 w-16 text-primary-500" />
          <h1 class="mb-4 text-3xl font-bold">Check Your Email</h1>
          <p class="mb-8 text-lg text-neutral-600 dark:text-neutral-400">
            We've sent you a verification link. Please check your email and click the link to verify your account.
            Once verified, you'll be able to access your dashboard.
          </p>
          <div class="space-y-4">
            <Button link="/" style="primary">
              Return to Homepage
            </Button>
            <p class="text-sm text-neutral-500">
              Didn't receive the email? Check your spam folder or
              <a href="/contact" class="text-primary-500 hover:text-primary-600">contact support</a>.
            </p>
          </div>
        </div>
      </Col>
      <Col span="2" />
    </Row>
  </Section>
</Layout> 