---
// Simple Course Card
// ------------
// Description: A simplified version of the course card for compact displays

// Components
import Button from '../ui/Button.astro';

// Props
type Props = {
  course: {
    title: string;
    description: string;
    slug: string;
  };
};

const { course } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-5">
  <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">{course.title}</h3>
  <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">{course.description}</p>
  <Button link={`/courses/${course.slug}`} style="primary" size="sm">View Course</Button>
</div> 